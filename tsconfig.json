{
	"compilerOptions": {
		"declaration": true,
		"inlineSources": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"removeComments": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"target": "es6",
		"lib": [ "es2020",
			"dom", "dom.iterable"
		],

		"experimentalDecorators": true
	},
	"rootDirs": ["src", "tests"]
}
